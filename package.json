{
  "name": "copy-code-location",
  "displayName": "Copy Code Location",
  "description": "Copy file path and line number from right-click context menu",
  "version": "0.0.1",
  "publisher": "qiangyuli",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:copy-code-location.copyLocation"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copy-code-location.copyLocation",
        "title": "Copy Code Location"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "copy-code-location.copyLocation",
          "group": "9_cutcopypaste",
          "when": "editorTextFocus"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/QiangyuLi/copy-code-location.git"
  },
  "keywords": [
    "copy",
    "location",
    "line number",
    "file path",
    "context menu"
  ],
  "license": "Apache-2.0"
}
